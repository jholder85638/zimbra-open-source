BASE=/opt/zimbra
SCRIPTS="zmapachectl"

case "$1" in 
	start)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i start
		done
	;;
	stop)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i stop
		done
	;;
	restart|reload)
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i $1
		done
	;;
	status)
		STATUS=0
		for i in $SCRIPTS; do
			/opt/zimbra/bin/$i status > /dev/null 2>&1
			R=$?
			if [ $R -ne "0" ]; then
				echo "$i is not running"
				STATUS=$R
			fi
		done
		exit $STATUS
	;;
	*)
		echo "$0 start|stop|restart|reload|status"
		exit 1
	;;
esac
